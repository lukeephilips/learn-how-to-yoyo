<%= render "layouts/errors", :object => @lesson %>

<%= form_for [@section, @lesson] do |f| %>

  <%= f.select(:section_id) do %>
  <% @sections.each do |c| -%>
    <%= content_tag(:option, c.name, value: c.id) %>
  <% end %>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.label :content %>
  <%= f.text_area :content, class: 'form-control' %>
  <%= f.label :image %>
  <%= f.text_field :image, class: 'form-control' %>
  <%= f.label :number %>
  <%= f.number_field :number, class: 'form-control' %>
  <%= f.submit class: 'btn btn-primary'%>
<% end  %>
