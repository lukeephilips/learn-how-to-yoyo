<%= render "layouts/errors", :object => @section %>

<%= form_for [@chapter, @section] do |f| %>

  <%= f.select(:chapter_id) do %>
  <% @chapters.each do |c| -%>
    <%= content_tag(:option, c.title, value: c.id) %>
    <% end %>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.label :section_number %>
  <%= f.number_field :section_number, class: 'form-control' %>
  <%= f.submit class: 'btn btn-primary'%>
<% end  %>
